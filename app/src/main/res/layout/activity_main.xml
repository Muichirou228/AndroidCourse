<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <AbsoluteLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/absoluteLayout"
        android:background="#E3F2FD"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Button 1"
            android:layout_x="20dp"
            android:layout_y="20dp" />

    </AbsoluteLayout>

    <FrameLayout
        android:id="@+id/frameLayout"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="#FFEBEE"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Текст сзади"
            android:textSize="20sp"
            android:background="#FFCDD2"
            android:layout_gravity="center" />

        <Button
            android:layout_width="120dp"
            android:layout_height="60dp"
            android:text="Кнопка сверху"
            android:layout_gravity="bottom|end" />

    </FrameLayout>

    <!-- Вертикальный LinearLayout -->
    <LinearLayout
        android:id="@+id/verticalLinearLayout"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:background="#E8F5E8"
        app:layout_constraintTop_toBottomOf="@id/frameLayout"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="16dp">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кнопка 1"
        android:layout_margin="8dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кнопка 2"
        android:layout_margin="8dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Кнопка 3"
        android:layout_margin="8dp" />

</LinearLayout>

    <!-- Горизонтальный LinearLayout -->
<LinearLayout
android:id="@+id/horizontalLinearLayout"
android:layout_width="300dp"
android:layout_height="wrap_content"
android:orientation="horizontal"
android:background="#E3F2FD"
app:layout_constraintTop_toBottomOf="@id/verticalLinearLayout"
app:layout_constraintStart_toStartOf="parent"
android:layout_margin="16dp">

<Button
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Левая"
android:layout_weight="1"
android:layout_margin="8dp" />

<Button
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Центр"
android:layout_weight="1"
android:layout_margin="8dp" />

<Button
android:layout_width="0dp"
android:layout_height="wrap_content"
android:text="Правая"
android:layout_weight="1"
android:layout_margin="8dp" />

    </LinearLayout>

    <TableLayout
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="200dp"
        android:stretchColumns="*">

        <!-- Строка 1: Объединение по горизонтали -->
        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Объединенная ячейка"
                android:background="#FFCDD2"
                android:padding="8dp"
                android:layout_span="2"
                android:gravity="center" />
        </TableRow>

        <!-- Строка 2: Обычные ячейки -->
        <TableRow>
            <TextView
                android:text="Ячейка 1"
                android:padding="8dp"
                android:background="#C8E6C9" />
            <TextView
                android:text="Ячейка 2"
                android:padding="8dp"
                android:background="#BBDEFB" />
        </TableRow>




    </TableLayout>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:background="#F0F0F0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Контент для прокрутки -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FFCCBC"
                android:text="Элемент 1"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#C8E6C9"
                android:text="Элемент 2"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#BBDEFB"
                android:text="Элемент 3"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#FFECB3"
                android:text="Элемент 4"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#D1C4E9"
                android:text="Элемент 5"
                android:gravity="center"
                android:textSize="18sp"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#B2DFDB"
                android:text="Элемент 6"
                android:gravity="center"
                android:textSize="18sp" />

        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>